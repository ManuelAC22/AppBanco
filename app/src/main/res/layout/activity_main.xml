<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/dollar2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:text="RETIRA TU MONEY"
        android:textColor="#007045"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="233dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawrable_corners">


            <LinearLayout
                android:id="@+id/menuLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="65dp">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/cardIdOne1"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:background="#fff"
                    android:inputType="number"
                    android:maxLength="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/cardIdDow2"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:background="#fff"
                    android:inputType="number"
                    android:maxLength="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/cardIdTree3"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:background="#fff"
                    android:inputType="number"
                    android:maxLength="4" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000" />


                <EditText
                    android:id="@+id/cardIdFour4"
                    android:layout_width="70dp"
                    android:layout_height="36dp"
                    android:background="#fff"
                    android:inputType="number"
                    android:maxLength="4" />
                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#000" />
            </LinearLayout>


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView3"
                android:layout_marginTop="22dp"
                android:text="BANCO EXPRESS"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="18dp"
                android:text="Clave de Internet"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/imagenMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/textView3"
                android:layout_marginStart="132dp"
                app:srcCompat="@drawable/ic_info_black_24dp" />

        </RelativeLayout>


    </RelativeLayout>

    <EditText
        android:id="@+id/contrasenaController"
        android:layout_width="326dp"
        android:layout_height="39dp"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true"
        android:background="#d4d4d4"
        android:inputType="numberPassword"
        android:layout_marginTop="15dp"
        android:maxLength="6"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btnIngresar"
        android:layout_width="326dp"
        android:layout_height="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/contrasenaController"
        android:layout_marginBottom="41dp"
        android:background="#007045"
        android:text="INGRESAR"
        android:textColor="#fff" />


</RelativeLayout>