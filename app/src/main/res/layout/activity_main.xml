<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/dollar2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="189dp"
        android:text="RETIRA TU MONEY"
        android:textColor="#007045"
        android:textSize="20dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/menu"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="233dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawrable_corners">

            <EditText
                android:id="@+id/cardIdOne"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="#fff"
                android:inputType="number"
                android:maxLength="4" />

            <EditText
                android:id="@+id/cardIdDow"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/cardIdOne"
                android:layout_marginStart="99dp"
                android:background="#fff"
                android:inputType="number"
                android:maxLength="4" />

            <EditText
                android:id="@+id/cardIdTree"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/cardIdOne"
                android:layout_marginEnd="102dp"
                android:background="#fff"
                android:inputType="number"
                android:maxLength="4" />


            <EditText
                android:id="@+id/cardIdFour"
                android:layout_width="70dp"
                android:layout_height="36dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/cardIdOne"
                android:layout_marginEnd="16dp"
                android:background="#fff"
                android:inputType="number"
                android:maxLength="4" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/cardIdOne"
                android:layout_marginTop="23dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="BANCO EXPRESS" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/cardIdOne"
                android:layout_marginBottom="15dp"
                android:text="Clave de Internet"
                android:textColor="#000" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView3"
                android:layout_toEndOf="@+id/textView2"
                app:srcCompat="@drawable/ic_info_black_24dp" />

        </RelativeLayout>


    </RelativeLayout>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="326dp"
        android:layout_height="39dp"
        android:layout_below="@+id/menu"
        android:layout_centerHorizontal="true"
        android:background="#d4d4d4"
        android:inputType="number"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginBottom="20dp"
        android:background="#007045"
        android:textColor="#fff"
        android:text="INGRESAR" />

</RelativeLayout>